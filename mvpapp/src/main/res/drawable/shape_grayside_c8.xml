<?xml version="1.0" encoding="utf-8"?><!--灰色圆角边框8dp-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--填充-->
    <solid android:color="@color/_white" />

    <!--描边-->
    <stroke
        android:width="0.2dp"
        android:color="#C8C8C8" />

    <!--圆角-->
    <corners android:radius="8dp" />

    <!--边距-->
    <padding
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp" />

</shape>
