<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--12号默认字体(颜色统一33)-->
    <style name="text_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--ratingBar样式(small)-->
    <style name="MyRationBarSytle_s" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/shape_mratingbar_s</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">19dp</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <!--横向分隔线样式-->
    <style name="divide_line_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">#C8C8C8</item>
    </style>

    <!--垂直分隔线样式-->
    <style name="divide_line_vel">
        <item name="android:layout_width">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#C8C8C8</item>
    </style>

</resources>
