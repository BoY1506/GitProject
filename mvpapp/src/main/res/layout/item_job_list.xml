<?xml version="1.0" encoding="utf-8"?><!--岗位列表item项-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/shape_grayside_c8">

        <LinearLayout
            android:id="@+id/top_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招聘名称"
                android:textColor="@color/_black"
                android:textSize="54px" />

            <TextView
                android:id="@+id/job_need_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目标人数"
                android:textColor="#00B9F0"
                android:textSize="42px" />

            <TextView
                android:id="@+id/job_joined_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(已招人数)"
                android:textColor="#00B9F0"
                android:textSize="42px" />

        </LinearLayout>

        <TextView
            android:id="@+id/job_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_ll"
            android:layout_marginTop="6px"
            android:text="工程名称"
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_pro_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/job_pro_name"
            android:layout_toRightOf="@id/job_pro_name"
            android:text="(工期)"
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_pro_starttime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_pro_name"
            android:text="开工日期："
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_pro_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_pro_name"
            android:layout_toRightOf="@id/job_pro_starttime_tv"
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_pro_place_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_pro_starttime_tv"
            android:text="工作地点："
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_pro_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_pro_starttime_tv"
            android:layout_toRightOf="@id/job_pro_place_tv"
            android:singleLine="false"
            android:textColor="@color/_black"
            android:textSize="42px" />

        <TextView
            android:id="@+id/job_day_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30px"
            android:text="/日"
            android:textColor="@color/_black"
            android:textSize="36px" />

        <TextView
            android:id="@+id/job_day_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/job_day_pay_tv"
            android:layout_toLeftOf="@id/job_day_pay_tv"
            android:text="¥500"
            android:textColor="#FF6600"
            android:textSize="60px" />

        <com.zhou.mvpapp.widget.DashedLine
            android:id="@+id/dashed_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/job_pro_place"
            android:layout_marginTop="18px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dashed_line"
            android:layout_marginTop="18px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司评分："
                android:textColor="@color/_black"
                android:textSize="42px" />

            <TextView
                android:id="@+id/company_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6600"
                android:textSize="42px" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/released_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:textColor="@color/_black"
                android:textSize="36px" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
